						<lb xml:id="LL1.4_lb_1r_02" n="2" facs="#LL1.4_line_1r_02"/>
						<addrLine>Monsieur</addrLine>
						<lb xml:id="LL1.4_lb_1r_03" n="3" facs="#LL1.4_line_1r_03"/>
						<addrLine>Monsieur <persName ref="TEI-ListPerson.xml#VF">Vincent Ferliti</persName></addrLine>
						<lb xml:id="LL1.4_lb_1r_04" n="4" facs="#LL1.4_line_1r_04"/>
						<addrLine><placeName ref="TEI-ListPlace.xml#NA">Naples</placeName></addrLine>
						<lb xml:id="LL1.4_lb_1r_05" n="5" facs="#LL1.4_line_1r_05"/>
						<addrLine>pour <placeName ref="TEI-ListPlace.xml#CT">Catane</placeName></addrLine>
